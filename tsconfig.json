{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2022",
		"outDir": "out",
		"lib": ["ES2022"],
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,
		"esModuleInterop": true,           // Ensures compatibility with ES6 modules
		"skipLibCheck": true,              // Skips type checking of all declaration files
		"forceConsistentCasingInFileNames": true,  // Ensures consistent file naming
		"typeRoots": ["./node_modules/@types", "./node_modules/@types/vscode"],  // Include vscode type definitions
		"moduleResolution": "node",        // Helps to resolve node modules
		"resolveJsonModule": true          // Allows importing JSON files as modules
	},
	"exclude": ["node_modules", ".vscode-test", "out"]  // Exclude node_modules and output directory
}
